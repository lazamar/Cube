{{>finances-menu}}

<h2>
  Entradas

  <button class="btn btn-success btn-sm pull-right"  data-toggle="modal" data-target="#newRecordModal">
    <i class="fa fa-plus" aria-hidden="true"></i>
  </button>
</h2>
<div class="text-right">
</div>
<table class="table table-sm table-hover">
  <thead>
    <tr>
      <th>Descriação</th>
      <th>Categoria</th>
      <th>Data</th>
      <th>Valor</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
      <tr>
        <td>{{description}}</td>
        <td>{{category}}</td>
        <td>{{formatDate date "%m/%d/%Y"}}</td>
        <td>{{formatCurrency amount}}</td>
      </tr>
    {{/each}}
    <tr>
      <th scope="row">2</th>
      <td>Jacob</td>
      <td>Thornton</td>
      <td>@fat</td>
    </tr>
    <tr>
      <th scope="row">3</th>
      <td colspan="2">Larry the Bird</td>
      <td>@twitter</td>
    </tr>
  </tbody>
</table>

<div class="modal fade" id="newRecordModal" tabindex="-1" role="dialog" aria-labelledby="newRecordModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="newRecordModalLabel">Nova entrada</h4>
      </div>
      <div class="modal-body">
        <form class="row">
          <div class="form-group col-xs-12">
            <label class="control-label" style="display:block;">Descrição:
              <textarea class="form-control"></textarea>
            </label>
          </div>
          <div class="form-group col-sm-4">
            <label class="control-label">Categoria:
              <input type="text" class="form-control">
            </label>
          </div>
          <div class="form-group col-sm-4">
            <label class="control-label">Data:
              <input type="date" class="form-control">
            </label>
          </div>
          <div class="form-group col-sm-4">
            <label class="control-label">Valor:
              <div class="input-group">
                <div class="input-group-addon">R$</div>
                <input type="text" class="form-control" placeholder="Valor">
              </div>
            </label>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-transparent" data-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-default">Salvar</button>
      </div>
    </div>
  </div>
</div>
